# =====================================================
# CONFIGURACIÓN REDIS
# =====================================================
REDIS_URL=redis://redis:6379/0

# =====================================================
# CONFIGURACIÓN CELERY
# =====================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =====================================================
# DIRECTORIOS DE ALMACENAMIENTO
# =====================================================
UPLOAD_DIR=/data/uploads
RESULT_DIR=/data/results

# =====================================================
# CONFIGURACIÓN API BACKEND
# =====================================================
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# =====================================================
# CONFIGURACIÓN FRONTEND
# =====================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_PORT=3001

# =====================================================
# CONFIGURACIÓN GPU (NVIDIA)
# =====================================================
NVIDIA_VISIBLE_DEVICES=all

# =====================================================
# CONFIGURACIÓN REMBG (BACKGROUND REMOVAL)
# =====================================================
# Modelos disponibles: birefnet-general, isnet-general-use, u2net
# birefnet-general: Mejor calidad (IoU 0.87), más lento
# isnet-general-use: Buen balance calidad/velocidad
# u2net: Más rápido, menor calidad
REMBG_MODEL=birefnet-general

# =====================================================
# CONFIGURACIÓN SEGURIDAD
# =====================================================
SECRET_KEY=cambiar_esto_por_una_key_segura
